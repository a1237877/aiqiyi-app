.section{
  width: 100%;
}
.left{
  height: 100rpx;
  float: left;
}
.image{
  width: 150rpx;
  height: 100rpx;
  float: left;
}
.seachBar{
  justify-content: center;
  height: 100rpx;
  background: #ff6700;
}
.searchBar .searBar-box{
  display: inline-block;
  width:75%;
  height: 50rpx;
  margin-top: 25rpx;
  border-radius: 40rpx;
  background: #fff;
}
.searBar-box.tap{
  background: rgba(255,247,231,.9);
}
.search-plac{
  text-align: center;
  font-size: 11pt;
  margin-top: 4rpx;
}
.searBar-box .search-icon{
  position: absolute;
  left: 36%;
  top: 35rpx;
  width: 44rpx;
  height: 44rpx;
}
.section-swiper .slide{
  width: 100%;
  height: 370rpx;
}
.section-swiper .slide-image{
  width: 100%;
  display: block;
}

/* 热播剧 */
.section-hot-title{
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
}
.section-hot-title .header{
  height: 50rpx;
}
.section-hot-title .header .title{
  margin-left: 15rpx;
  font-size: 44rpx;
}
.section-hot-title .header .list{
  float: right;
  margin-right: 50rpx;
  margin-top: 9rpx;
}
.section-hot-title .header .arrow{
width: 10px;
height: 10px;
border-top: 2px solid #999;
border-right: 2px solid #999;
position: absolute;
right: 20rpx;
transform: rotate(45deg);
margin-top:-43rpx;
float: right;
}
.section-hot{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  border-bottom: 1px solid #fff;
}
.hot-list{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hot-item{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin-left: 30rpx;
  /* margin-right: 20rpx; */
}
.hot-item .item-img{
  display: inline-block;
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}

