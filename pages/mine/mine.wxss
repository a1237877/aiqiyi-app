/* pages/mine/mine.wxss */
view{
    display: block;
}

.mine{
    display: flex;
    flex-direction:column;
    align-items:center;
}
.header{
    margin-bottom: 50rpx;
}
.header .touxiang{
    display:flex;
    flex-direction:row;
    justify-content:center;
    align-items:center;
    width:190rpx;
    height:190rpx;
    margin-top:100rpx;
    border-radius:50%;
    background:#d6d6d6;
}
.header image{
    width:190rpx;
    border-radius:50%;
    height:190rpx;
    background-color:#d6d6d6;
    

}
.header .desc{
    margin-top: 65rpx;
}
button{

  
    background: green;
}
.bg{
    background-color: rgba(0, 0, 0, 0.05);
    width: 100%;
    height: 20rpx;
}
.main{
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    margin-bottom: -10rpx;
}
.main .desc{
    font-weight: bold;
    font-size: 16px;
    margin-left: 20rpx;

}
.main .arrow{
    width: 10px;
    height: 10px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: absolute;
    right: 20rpx;
    transform: rotate(45deg);
    margin-top:-43rpx;
    float: right;
    vertical-align: middle;
}